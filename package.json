{
  "name": "mep-api",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "author":
    "Cody Brunner <rockchalkwushock@icloud.com> (https://rcws-development.com)",
  "description": "Mail client micro-service for mashaeltsovaphotography.com.",
  "repository": "https://github.com/rockchalkwushock/mep-api.git",
  "main": "index.js",
  "scripts": {
    "cm": "nps commit",
    "dev": "nps dev",
    "now-start": "micro",
    "start": "nps",
    "test": "nps test"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "bail": true,
    "collectCoverageFrom": ["server/**/**/*.js"],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": ["prettier --single-quote --no-semi --write", "git add"]
  },
  "now": {
    "alias": ["mep-v2"],
    "dotenv": true,
    "env": {
      "NODE_ENV": "production"
    },
    "files": [
      "./server",
      ".env.example",
      "index.js",
      "package.json",
      "yarn.lock"
    ],
    "name": "mep-mail-api"
  },
  "dependencies": {
    "dotenv-safe": "^4.0.4",
    "micro": "^9.1.0",
    "micro-compress": "^1.0.0",
    "micro-cors": "^0.1.0",
    "micro-ratelimit": "^0.3.0",
    "micro-sentry": "^1.2.0",
    "microrouter": "^3.0.0",
    "mongoose": "^5.0.1",
    "nodemailer": "^4.4.2"
  },
  "devDependencies": {
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.16.0",
    "eslint-config-equimper": "^2.2.1",
    "eslint-config-prettier": "^2.9.0",
    "husky": "0.15.0-beta.16",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "micro-dev": "^2.2.0",
    "nps": "^5.7.1",
    "nps-utils": "^1.4.0",
    "prettier": "^1.10.2"
  }
}
