{
  "name": "mep-api",
  "version": "0.2.1",
  "license": "MIT",
  "private": true,
  "author": "Cody Brunner <rockchalkwushock@icloud.com> (https://codybrunner.me)",
  "description": "Mail client micro-service for mashaeltsovaphotography.com.",
  "repository": "https://github.com/rockchalkwushock/mep-api.git",
  "main": "index.js",
  "scripts": {
    "cm": "git cz",
    "dev": "NODE_ENV=development micro-dev -p 4000",
    "now-start": "NODE_ENV=production micro"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": ["prettier --single-quote --no-semi --write", "git add"]
  },
  "now": {
    "alias": ["mep-v2"],
    "files": [
      "./server",
      ".env.example",
      "index.js",
      "package.json",
      "yarn.lock"
    ],
    "name": "mep-mail-api"
  },
  "dependencies": {
    "dotenv-safe": "^5.0.1",
    "micro": "^9.1.0",
    "micro-compress": "^1.0.0",
    "micro-cors": "^0.1.0",
    "micro-ratelimit": "^0.3.0",
    "micro-sentry": "^1.2.0",
    "microrouter": "^3.0.0",
    "mongoose": "^5.0.8",
    "nodemailer": "^4.6.0"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.18.2",
    "eslint-config-equimper": "^2.2.2",
    "eslint-config-prettier": "^2.9.0",
    "husky": "0.15.0-beta.16",
    "lint-staged": "^7.0.0",
    "micro-dev": "^2.2.0",
    "prettier": "^1.11.1"
  }
}
